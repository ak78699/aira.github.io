---
import Button from "../components/button.astro";
import Projects from "../components/home/projects.astro";
import Separator from "../components/home/separator.astro";
import Writings from "../components/home/writings.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Aira">
  <div
    class="relative z-20 w-full max-w-4xl mx-auto mt-16 px-7 md:mt-24 lg:mt-32 xl:px-0"
  >
    <div class="flex flex-col items-center md:flex-row">
      <div class="relative w-full md:w-1/2">
        <h1
          class="mb-5 text-4xl font-inknut leading-tight md:text-4xl lg:text-6xl dark:text-white"
        >
          Hello!
        </h1>
        <p class="mb-6 text-base font-inknut text-neutral-600 dark:text-neutral-400">
          I'm a front-end programmer living in Nanjing. <br
            class="hidden lg:block"
          />I focus on Web development.
        </p>
        <p class="mb-2 font-inknut font-inknut text-neutral-800 dark:text-neutral-200">
          I can help you out with:
        </p>
        <ul
          class="py-2 space-y-[3px] text-sm list-disc list-inside font-inknut text-neutral-500 dark:text-neutral-400"
        >
          <li>Vue.js Development</li>
          <li>React.js Development</li>
          <li>Node.js Development</li>
          <li>Website Design</li>
          <li>and more...</li>
        </ul>
        <Button text="Follow me on ð•" link="https://x.com/0xKaiBi" />
      </div>
      <div
        class="relative justify-end hidden w-full mt-10 md:flex md:pl-10 md:w-1/2 md:mt-0 md:translate-y-4 xl:translate-y-0"
      >
        <div class="relative z-50 w-full">
          <div class="relative z-30 px-10">
            <div
              class="mx-auto border-[3px] border-[#6D4C41] shadow-sm"
              style="
                clip-path: ellipse(490% 50%);
                overflow: hidden;
                background-color: #6D4C41;
                max-width: fit-content;
              "
            >
              <img
                src="/assets/images/photo1.png"
                loading="eager"
                decoding="auto"
                class="w-full aspect-[790/1189] object-cover object-center"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <Separator text="Check out my projects" />
  <Projects />
  <Separator text="Some of my writing" />
  <Writings />
</Layout>
